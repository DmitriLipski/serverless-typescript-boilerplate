{
  "name": "serverless-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript boilerplate",
  "main": "serverless.ts",
  "scripts": {
    "start": "serverless offline --httpPort=4000 --host 0.0.0.0 --stage local",
    "deploy:dev": "serverless deploy --aws-profile personal --stage dev",
    "deploy:production": "serverless deploy --aws-profile personal --stage production",
    "remove:dev": "serverless remove --aws-profile personal --stage dev",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --coverage",
    "lint": "eslint '*/**/*.{js,ts}'",
    "check:code": "tsc --project ./tsconfig.json --noEmit && npx eslint -c .eslintrc.js --ext .ts .",
    "prettier": "prettier --write '*/**/*.{js,ts}'",
    "docs": "redoc-cli serve docs/openapi/openapi.yml",
    "docs:watch": "redoc-cli serve docs/openapi/openapi.yml --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "@middy/core": "^4.2.5",
    "@middy/http-json-body-parser": "^4.2.5",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@serverless/typescript": "^3.27.0",
    "@types/aws-lambda": "^8.10.110",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "commitlint": "^17.4.4",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "json-schema-to-ts": "^2.6.2",
    "lint-staged": "^10.5.3",
    "prettier": "^2.8.4",
    "redoc-cli": "^0.13.20",
    "serverless": "3.27.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-aws-alerts": "^1.7.5",
    "serverless-plugin-canary-deployments": "^0.8.0",
    "serverless-prune-plugin": "^2.0.2",
    "serverless-stage-manager": "^1.0.5",
    "serverless-webpack": "^5.11.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix", "prettier --write"
    ]
  },
  "author": "André Brandão",
  "license": "MIT"
}
